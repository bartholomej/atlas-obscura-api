{
  "name": "atlas-obscura-api",
  "version": "3.0.0",
  "description": "Atlas Obscura API in JavaScript. NPM library for scrapping atlasobscura.com",
  "main": "index.js",
  "author": "BART! <bart@bartweb.cz>",
  "scripts": {
    "start": "tsc -w",
    "prebuild": "rimraf dist",
    "build": "tsc",
    "postbuild": "npm-prepare-dist -s postinstall -s prepare",
    "tsc": "tsc",
    "demo": "tsx demo",
    "lint": "eslint ./src/**/**/* --fix",
    "test": "vitest",
    "publish:next": "yarn && yarn build && yarn test --coverage && npm publish --folder dist --tag beta",
    "postversion": "git push && git push --follow-tags",
    "release:beta": "npm version preminor --preid=beta -m \"chore(update): prelease %s β\"",
    "prerelease:beta": "npm version prerelease --preid=beta -m \"chore(update): prelease %s β\"",
    "release:patch": "git checkout master && npm version patch -m \"chore(update): patch release %s 🐛\"",
    "release:minor": "git checkout master && npm version minor -m \"chore(update): release %s 🚀\"",
    "release:major": "git checkout master && npm version major -m \"chore(update): major release %s 💥\"",
    "prepare": "husky"
  },
  "dependencies": {
    "cross-fetch": "^4.0.0",
    "node-html-parser": "^7.0.1"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.22.5",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.34.0",
    "@types/node": "^24.3.0",
    "@types/node-fetch": "^3.0.3",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vitest/coverage-v8": "3.2.4",
    "eslint": "^9.34.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "npm-prepare-dist": "^0.5.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "repository": {
    "url": "git+https://github.com/bartholomej/atlas-obscura-api.git",
    "type": "git"
  },
  "bugs": {
    "url": "https://github.com/bartholomej/atlas-obscura-api/issues"
  },
  "homepage": "https://github.com/bartholomej/atlas-obscura-api#readme",
  "keywords": [
    "travellers",
    "atlasobscura",
    "places",
    "maps",
    "nodejs",
    "node",
    "typescript",
    "scraper",
    "parser",
    "api"
  ],
  "engines": {
    "node": ">= 20"
  },
  "license": "MIT",
  "lint-staged": {
    "*.ts": "eslint --cache --fix"
  }
}
