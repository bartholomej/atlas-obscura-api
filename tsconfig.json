{
  "compilerOptions": {
    "target": "es2024",
    "lib": ["dom"],
    "types": ["node"],
    "esModuleInterop": true,
    "module": "commonjs",
    "strictNullChecks": false,
    "sourceMap": false,
    "outDir": "./dist",
    "strict": true,
    "declaration": true,
    "pretty": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "isolatedDeclarations": true
  },
  "include": ["src"],
  "exclude": ["dist/**/*", "*/tests/**/*"]
}
